<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<data>
    <variable
        name="product"
        type="com.opp.cashingapi.domain.entity.Product" />

</data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/product_detail_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="32dp"
            app:imageUrl="@{product.imageUrl}"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/product_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="@{product.name}"
            app:layout_constraintTop_toBottomOf="@+id/product_detail_image"
            tools:text="Calvin Klein CK One" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/product_detail_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textSize="24sp"
            app:priceText="@{product.price}"
            app:layout_constraintTop_toBottomOf="@+id/product_detail_title"
            tools:text="Price: Rs23" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/product_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/product_detail_price"
            android:text="@{product.description}"
            tools:text="CK One by Calvin Klein is a classic unisex fragrance, known for its fresh and clean scent. It's a versatile fragrance suitable for everyday wear." />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>