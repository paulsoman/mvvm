<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="product"
            type="com.opp.cashingapi.domain.entity.Product" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/product_detail_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_launcher_background"
            app:imageUrl="@{product.imageUrl}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/product_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:text="@{product.name}"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/product_detail_price"
            app:layout_constraintStart_toEndOf="@+id/product_detail_image"
            app:layout_constraintTop_toTopOf="@+id/product_detail_image"
            tools:text="Calvin Klein CK One" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/product_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/product_detail_title"
            app:layout_constraintTop_toBottomOf="@+id/product_detail_title"
            app:priceText="@{product.price}"
            tools:text="Price: Rs23" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>